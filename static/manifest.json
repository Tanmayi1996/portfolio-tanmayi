{
  "name": "Tanmayi - Interactive Portfolio",
  "short_name": "Tanmayi",
  "description": "Interactive portfolio and professional showcase",
  "theme_color": "#2196f3",
  "background_color": "#424242",
  "display": "standalone",
  "orientation": "any",
  "scope": "./",
  "start_url": "./index.html?source=pwa",
  "categories": ["productivity", "business", "portfolio"],
  "lang": "en",
  "dir": "ltr",
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/contact?email=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Portfolio",
      "short_name": "Portfolio",
      "description": "View my work and projects",
      "url": "/portfolio",
      "icons": [
